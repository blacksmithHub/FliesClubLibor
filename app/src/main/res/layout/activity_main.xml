<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flies"
    tools:context="com.example.libor.fliesclublibor.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingBottom="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="280dp">

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColorHint="@drawable/selector"
            android:hint="Password"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="340dp">

        <EditText
            android:id="@+id/editText_retypepass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColorHint="@drawable/selector"
            android:ems="10"
            android:hint="ReType Password"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingTop="160dp">

        <EditText
            android:id="@+id/editText_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@drawable/selector"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Postal Address"
            android:inputType="textPostalAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="100dp">

        <EditText
            android:id="@+id/editText_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColorHint="@drawable/selector"
            android:ems="10"
            android:hint="Date of Birth"
            android:inputType="date"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="94dp"
            android:layout_height="43dp"

            android:layout_weight="0.21"
            android:entries="@array/gender_arrays"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingTop="50dp">

        <EditText
            android:id="@+id/editText_surname"
            android:layout_width="wrap_content"
            android:textColorHint="@drawable/selector"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Surname"
            android:inputType="textCapWords|textPersonName"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColorHint="@drawable/selector"
            android:hint="First Name"
            android:inputType="textCapWords|textPersonName"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_middleinitial"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:textColorHint="@drawable/selector"
            android:ems="10"
            android:hint="MI"
            android:inputType="textCapCharacters|textPersonName"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingTop="220dp">

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@drawable/selector"
            android:layout_weight="1"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="408dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_submit"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_weight="3"
            android:onClick="onButtonClickListener"
            app:srcCompat="@drawable/sbmtbtn" />

    </LinearLayout>
</RelativeLayout>
</ScrollView>
